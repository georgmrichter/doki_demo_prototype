<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scanqr.ScanQRFragment">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/scan_qr_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Scannen sie den QR Code auf dem Armband." />

        <Button
            android:id="@+id/button_scan_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QR Code Scan starten"
            android:onClick="onScanQRClick"/>

        <Button
            android:id="@+id/button_test"
            android:backgroundTint="#616161"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B8:F0:09:CC:5A:3E"
            android:onClick="onTestClick"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>