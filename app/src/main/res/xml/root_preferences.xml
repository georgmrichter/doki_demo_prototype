<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Distanzen">
        <EditTextPreference
            app:key="innerZoneDistance"
            app:title="Distanz innere Zone"
            app:defaultValue="2"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="outerZoneDistance"
            app:title="Distanz äußere Zone"
            app:defaultValue="4"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="tooCloseDistance"
            app:title="Distanz zu nah"
            app:defaultValue="0.5"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="vibrationRampRange"
            app:title="Anschwelldistanz"
            app:defaultValue="0.5"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="Vibrationsmuster">
        <EditTextPreference
            app:key="outerEnterPattern"
            app:title="Betreten äußere Zone"
            app:defaultValue="1,123,1"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="innerEnterPattern"
            app:title="Betreten innere Zone"
            app:defaultValue="64,64,64"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="outerLeavePattern"
            app:title="Verlassen äußere Zone"
            app:defaultValue="1,123,1"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="innerLeavePattern"
            app:title="Verlassen innere Zone"
            app:defaultValue="64,64,64"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="voiceEndPattern"
            app:title="Betreten innere Zone"
            app:defaultValue="1,1,1"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="Anschwellstärken">
        <EditTextPreference
            app:key="outerEnterRampMax"
            app:title="Äußere Zone betreten MAX"
            app:defaultValue="255"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="innerEnterRampMax"
            app:title="Innere Zone betreten MAX"
            app:defaultValue="255"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="outerLeaveRampMax"
            app:title="Äußere Zone verlassen MAX"
            app:defaultValue="255"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="innerLeaveRampMax"
            app:title="Innere Zone verlassen MAX"
            app:defaultValue="255"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="tooCloseRampMax"
            app:title="Zu nah MAX"
            app:defaultValue="255"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>

</PreferenceScreen>